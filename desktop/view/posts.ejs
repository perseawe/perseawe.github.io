
<header class="toolbar toolbar-header">
  <h1 class="title">Innsbruck</h1>

  <div class="toolbar-actions">
    <button class="btn btn-default">
      <span class="icon icon-home icon-text"></span>
      <%= blog.name %>
    </button>

    <div class="btn-group">
      <button class="btn btn-default btn-link" data-link="/post/new">
        <span class="icon icon-plus icon-text"></span>
        Post
      </button>
      <button class="btn btn-default btn-link" data-link="/page/new">
        <span class="icon icon-plus icon-text"></span>
        Page
      </button>
    </div>

    <button class="btn btn-default btn-dropdown pull-right">
      <span class="icon icon-upload-cloud"></span>
    </button>

    <div class="btn-group pull-right">
      <button class="btn btn-default">
        <a href="/index.html" target="_blank">
        <span class="icon icon-eye"></span>
        </a>
      </button>
      <button class="btn btn-default btn-link" data-link="/settings">
        <span class="icon icon-cog"></span>
      </button>
    </div>
  </div>
</header>


<div>

  <nav>
    <% for (let i = 0; i < pages.length; i++) { %>
      <a class="page-menu" href="/<%= pages[i].link %><%= static ? '.html' : '' %>"><%= pages[i].title %></a>
    <% } %>
  </nav>

  <div class="pane-group">
    <div class="pane pane-sm sidebar">
      <nav class="nav-group">
        <h5 class="nav-group-title">Pages</h5>
        <% for (let i = 0; i < pages.length; i++) { %>
        <span class="nav-group-item post-select" data-link="/<%= pages[i].link %>">
          <%= pages[i].title %>
        </span>
        <% } %>
        <h5 class="nav-group-title">Posts</h5>
        <% for (let i = 0; i < posts.length; i++) { %>
        <span class="nav-group-item post-select" data-link="/post/<%= posts[i].link %>">
          <%= posts[i].title %>
        </span>
        <% } %>
      </nav>
    </div>
    <div class="pane">
      <iframe id="pane-view">
      </iframe>
    </div>
  </div>
</div>


<footer class="toolbar toolbar-footer">
  <h1 class="title"><%= blog.name %>, last saved at xxx</h1>
</footer>
