
<header class="toolbar toolbar-header">
  <h1 class="title">Innsbruck</h1>

  <div class="toolbar-actions">
    <button class="btn btn-default btn-link" data-link="/">
      <span class="icon icon-user icon-text"></span>
      <%= blog.name %>
    </button>

    <button class="btn btn-default btn-dropdown pull-right">
      <span class="icon icon-megaphone"></span>
    </button>
  </div>
</header>


<div class="margin-top margin-bottom">
  <form id="page_form" method="POST">
    <article>
      <input type="text" name="title" placeholder="Title" autocomplete="off">
      <p style="display: flex; display: -webkit-flex">
        <span style="padding: 5px 5px 5px 0; color: #ccc">http://your.blog/</span><input class="inline-input" style="flex: 1; -webkit-flex: 1" type="text" name="link" placeholder="link" autocomplete="off">
      </p>
      <p>
        <textarea name="content"></textarea>
      </p>
      <p style="display: flex; display: -webkit-flex">
        <span style="padding: 5px 5px 5px 0; color: #ccc">Menu display order: </span><input class="inline-input" style="flex: 1; -webkit-flex: 1" type="text" name="order" placeholder="...-2, -1, 0, 1, 2..." autocomplete="off">
      </p>
      <p>Insert image (uploaded to "/static" folder): <input class="file-upload upload-finish" style="display: none" type="file">
      <noscript>sorry, but your browser doesn't support JavaScript.</noscript>
      </p>
    </article>
  </form>
</div>
<script src="/static/file-upload.js"></script>
<%- plugin.enable && plugin.editorBottom ? plugin.editorBottom() : '' %>


<footer class="toolbar toolbar-footer">
  <div class="toolbar-actions">
    <button class="btn btn-default btn-link" data-link="/">
      Cancel
    </button>

    <button class="btn btn-primary pull-right" onclick="page_form.submit();">
      Save
    </button>
  </div>
</footer>